# Hugo 配置示例文件 - 展示完整配置包括 i18n

baseURL: "https://example.com"
languageCode: "zh-cn"
defaultContentLanguage: "zh-cn"
title: "我的 Hugo 站点"

# 多语言配置
languages:
  zh-cn:
    languageName: "中文"
    weight: 1
    title: "我的 Hugo 站点"
    params:
      description: "一个简洁的 Hugo 主题"
  en:
    languageName: "English"
    weight: 2
    title: "My Hugo Site"
    params:
      description: "A clean Hugo theme"

# 菜单配置 - 展示所有可用图标
menus:
  main:
    - name: 首页
      pageRef: /
      weight: 10
      params:
        icon: home
    - name: 博客
      pageRef: /blog
      weight: 20
      params:
        icon: blog
    - name: 文章
      pageRef: /posts
      weight: 30
      params:
        icon: posts
    - name: 分类
      pageRef: /categories
      weight: 40
      params:
        icon: categories
    - name: 标签
      pageRef: /tags
      weight: 50
      params:
        icon: tags
    - name: 归档
      pageRef: /archive
      weight: 60
      params:
        icon: archive
    - name: 关于
      pageRef: /about
      weight: 70
      params:
        icon: about
    - name: 联系
      pageRef: /contact
      weight: 80
      params:
        icon: contact

  # 页脚外部链接菜单 (使用 i18n 键)
  footer:
    - name: footer.about_us
      pageRef: /about
      weight: 10
      params:
        icon: about
    - name: footer.contact_us
      pageRef: /contact
      weight: 20
      params:
        icon: contact
    - name: footer.rss_feed
      pageRef: /index.xml
      weight: 30
      params:
        icon: rss
    - name: nav.archive
      pageRef: /archive
      weight: 40
      params:
        icon: archive

  # 社交媒体菜单
  social:
    - name: GitHub
      url: https://github.com/username
      weight: 10
      params:
        icon: github
    - name: Twitter
      url: https://twitter.com/username
      weight: 20
      params:
        icon: twitter
    - name: LinkedIn
      url: https://linkedin.com/in/username
      weight: 30
      params:
        icon: linkedin
    - name: Email
      url: mailto:your.email@example.com
      weight: 40
      params:
        icon: email
    - name: YouTube
      url: https://youtube.com/@username
      weight: 50
      params:
        icon: youtube

params:
  # 站点 Logo 配置
  logo:
    image: "/images/logo.svg"  # Logo 图片路径
    alt: "common.site_logo"    # 图片 alt 文本 (i18n 键)
    link: "/"                  # 点击跳转链接，默认首页

  # 作者信息配置
  author:
    name: "你的姓名"
    title: "你的职位/身份"
    description: "简短的个人介绍，描述你的专业领域和兴趣爱好。"
    avatar: "/images/avatar.svg"  # 头像图片路径
    social:
      - name: "GitHub"
        url: "https://github.com/yourusername"
        icon: "github"
      - name: "Twitter"
        url: "https://twitter.com/yourusername"
        icon: "twitter"
      - name: "Email"
        url: "mailto:your.email@example.com"
        icon: "email"
      - name: "LinkedIn"
        url: "https://linkedin.com/in/yourusername"
        icon: "linkedin"

  # 首页配置
  home:
    recentPostsCount: 5  # 首页显示的最近文章数量 (默认: 5)

  # 主题配置
  colorScheme: "claude" # 默认主题

  # 可用主题配置 (简化版 - 只需要名称和顺序)
  themes:
    shadcn:
      name: "ShadcnUI"
      order: 1
    claude:
      name: "Claude"
      order: 2
    emerald:
      name: "Emerald"
      order: 3
    rose:
      name: "Rose"
      order: 4
    forest:
      name: "Forest"
      order: 5

# 可用图标列表（仅供参考，不需要在配置中定义）
# 导航类图标:
#   - home: 首页
#   - blog: 博客
#   - posts: 文章
#   - categories: 分类
#   - tags: 标签
#   - archive: 归档
#   - about: 关于
#   - contact: 联系
#   - search: 搜索
#   - rss: RSS 订阅
#
# 功能类图标:
#   - menu: 菜单
#   - close: 关闭
#   - heart: 心形/收藏
#   - github: GitHub
#
# 主题类图标:
#   - sun: 太阳（亮色模式）
#   - moon: 月亮（暗色模式）
#   - monitor: 显示器（跟随系统）
#   - palette: 调色板（主题切换）

# 使用说明:
# 1. 复制需要的菜单配置到你的 hugo.yaml 文件
# 2. 根据你的实际页面路径调整 pageRef
# 3. 选择合适的图标名称设置到 params.icon
# 4. 调整 weight 值来控制菜单项的显示顺序
# 5. 如果不需要图标，可以省略 params.icon 配置
